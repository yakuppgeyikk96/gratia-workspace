# Environment
NODE_ENV=development

# MongoDB
MONGO_URI=your-mongodb-uri

# PostgreSQL - Local Development
DATABASE_URL_LOCAL=postgresql://postgres:postgres@localhost:5432/gratia_dev

# PostgreSQL - Production (Supabase)
DATABASE_URL_PRODUCTION=your-supabase-connection-string

# Server
PORT=8080
HOST=localhost

# JWT
JWT_SECRET=your-jwt-secret
JWT_EXPIRES_IN=15m
REFRESH_TOKEN_EXPIRES_IN=7d

# Encryption
ENCRYPTION_SECRET_KEY=your-encryption-key

# Email
EMAIL_SERVICE=gmail
EMAIL_USER=your-email@gmail.com
EMAIL_PASSWORD=your-app-password
EMAIL_FROM=Your App <your-email@gmail.com>

# Redis
REDIS_HOST=your-redis-host
REDIS_PORT=6379
REDIS_USERNAME=default
REDIS_PASSWORD=your-redis-password

# Stripe
STRIPE_SECRET_KEY=your-stripe-secret-key